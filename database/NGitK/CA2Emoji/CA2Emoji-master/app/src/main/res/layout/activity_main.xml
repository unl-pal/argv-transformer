<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="20dp" android:background="#FFFF8800"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView android:text="@string/get_the_name_text_view" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="15dp"
        android:textSize="25sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Get Contact Name"
        android:onClick="onGetNameClick"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/users_name_message"
        android:id="@+id/button_get_contact_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#007000"
        android:layout_marginTop="10dp"
        android:id="@+id/users_name_message"/>

    <Button
        android:id="@+id/button_view_inbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="View Inbox"
        android:onClick="onViewInboxClick"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button_get_contact_name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/button_view_recorder"
        android:text="Recorder"
        android:onClick="onViewRecorderClick"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button_view_inbox" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="ContactList"
        android:onClick="onViewContactListClick"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button_view_recorder" />

</RelativeLayout>
