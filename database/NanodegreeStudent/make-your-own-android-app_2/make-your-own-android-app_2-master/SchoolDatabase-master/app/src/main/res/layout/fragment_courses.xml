<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_students"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Course"
        android:onClick="onClickAddCourse" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff2288ff">
        <TextView
            android:id="@+id/txtId"
            android:text="ID"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/txtCourseCode"
            android:text="Course Code"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txtId"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/txtCourseTitle"
            android:text="Course Title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txtCourseCode"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/txtCredits"
            android:text="Credits"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txtCourseTitle"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/courseListView"
        android:background="#ffdc86ff" />

</LinearLayout>