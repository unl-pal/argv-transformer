<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtId"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />
    <TextView
        android:id="@+id/txtIndexNo"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtId"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/txtAcYear"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtIndexNo"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/txtSemester"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtAcYear"
        android:layout_centerVertical="true" />
    <TextView
        android:id="@+id/txtCourseCode"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtSemester"
        android:layout_centerVertical="true" />
    <TextView
        android:id="@+id/txtAttendance"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtCourseCode"
        android:layout_centerVertical="true" />
    <TextView
        android:id="@+id/txtMidSemester"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtAttendance"
        android:layout_centerVertical="true" />
    <TextView
        android:id="@+id/txtFinalExam"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtMidSemester"
        android:layout_centerVertical="true" />

</RelativeLayout>