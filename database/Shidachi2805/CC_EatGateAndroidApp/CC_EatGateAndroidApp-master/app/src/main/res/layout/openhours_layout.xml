        android:visibility="gone"

        />

    <TextView
        android:id="@+id/tag_fr"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"

        />

    <TextView
        android:id="@+id/tag_sa"
        android:layout_width="fill_parent"
