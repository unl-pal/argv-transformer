<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:VerticalPanel>
			<g:HorizontalPanel horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
				<g:Label text="Имя" ui:field="nameLabel"/>
				<g:TextBox height="18px" ui:field="nameField" alignment="LEFT"/>
			</g:HorizontalPanel>
			<g:HorizontalPanel horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
				<g:Label text="Телефон" ui:field="phoneLabel"/>
				<g:TextBox ui:field="phoneField"/>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Button ui:field="saveButton">Сохранить</g:Button>
				<g:Button ui:field="deleteButton">Удалить</g:Button>
				<g:Button ui:field="cancelButton">Отмена</g:Button>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 