<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_label_dia_fechamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="16sp"
        android:text="@string/text_dia_fechamento_cartao"/>

    <TextView
        android:id="@+id/text_dia_fechamento_cartao_configuracao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:hint="@string/hint_dia_fechamento_cartao"
        android:layout_toRightOf="@+id/text_label_dia_fechamento"
        android:layout_toEndOf="@+id/text_label_dia_fechamento" />


</RelativeLayout>