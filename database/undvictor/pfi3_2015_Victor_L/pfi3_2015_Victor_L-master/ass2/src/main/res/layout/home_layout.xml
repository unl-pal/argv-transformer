<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/mainActivity"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="100dp">

            <!-- Clock-knapp -->
            <ImageButton
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:id="@+id/clockButton"
                android:background="@drawable/ic_clockicon"
                android:layout_gravity="right"
                android:layout_alignBottom="@+id/ticketButton"
                android:layout_alignParentStart="true"
                android:layout_marginStart="45dp" />

            <!-- Biljett-knapp -->

            <ImageButton
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:id="@+id/ticketButton"
                android:background="@drawable/ic_ticketicon"
                android:layout_gravity="right"
                android:layout_weight="0.36"
                android:layout_marginEnd="54dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

            <!-- BiljettIcon textView -->
            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="@string/ticket_string"
                android:id="@+id/searchText"
                android:layout_below="@+id/ticketButton"
                android:layout_alignEnd="@+id/ticketButton" />

            <!-- ClockIcon textView -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clock_string"
                android:id="@+id/tabellText"
                android:layout_below="@+id/clockButton"
                android:layout_alignEnd="@+id/clockButton" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginTop="100dp">

            <!-- Kalender-knapp -->

            <ImageButton
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:id="@+id/calendarButton"
                android:background="@drawable/ic_calendaricon"
                android:layout_weight="0.36"
                android:layout_marginEnd="54dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <!-- SökIcon-knapp -->

            <ImageButton
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:id="@+id/searchButton"
                android:background="@drawable/ic_searchicon"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="45dp" />

            <!-- SökknapptextView -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_string"
                android:id="@+id/reseText"
                android:layout_below="@+id/searchButton"
                android:layout_alignEnd="@+id/searchButton" />

            <!-- TidtabellstextView -->
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/calendar_string"
                android:id="@+id/clockText2"
                android:layout_below="@+id/calendarButton"
                android:layout_alignEnd="@+id/calendarButton" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
